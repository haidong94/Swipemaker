<?xml version="1.0" encoding="utf-8"?>
<com.example.dong.swipemaker.HalfRightCoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.dong.swipemaker.MainActivity">

    <ImageButton
        android:id="@+id/backgroundView"
        android:src="@drawable/ic_trash"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <com.xenione.libs.swipemaker.SwipeLayout
        android:id="@+id/foregroundView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sample3"/>

    </com.xenione.libs.swipemaker.SwipeLayout>

</com.example.dong.swipemaker.HalfRightCoordinatorLayout>
